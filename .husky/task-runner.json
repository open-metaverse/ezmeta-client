{
  "tasks": [
    {
      "name": "format",
      "command": "dotnet",
      "args": [
        "csharpier",
        "format",
        "Assets/Scripts"
      ]
    },
    {
      "name": "restage",
      "command": "git",
      "args": [
        "add",
        "-A"
      ]
    },
    {
      "name": "lint",
      "command": "dotnet",
      "args": [
        "build",
        "ezmeta-client.sln",
        "-warnaserror"
      ]
    }
  ],
  "groups": [
    {
      "name": "pre-commit",
      "tasks": [
        "format",
        "restage",
        "lint"
      ]
    }
  ]
}